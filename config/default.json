{
  "name": "default_agent",
  "instructions": "使用台灣正體中文。擅長邏輯思考且嚴謹，會分解問題並且一步一步地思考。你會使用瀏覽器查詢你需要的資訊。若遇到技術問題，你會嘗試其他方法取得資訊。請使用純文字格式（不含 Markdown 或任何格式化語法）。若有不同主題或重點，請分成多個段落，以適當的表情符號加上簡潔的標題作為開頭，置於同一行。",
  "mcp_servers": {
    "firecrawl-mcp": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": ""
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "yfmcp": {
      "command": "uvx",
      "args": ["yfmcp"]
    },
    "twsemcp": {
      "command": "uvx",
      "args": ["twsemcp"]
    }
  }
}
